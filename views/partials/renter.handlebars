<div class="col-md-12 text-center enter_section ">
   <span>
      (Total comments:
      {{getLength comments }})
   </span>
   <form action="/api/comments/create" method="POST">
      <input type="text" class="form-control" name="comment" value="" placeholder="add your comment" id="enter_text">
      <button type="submit" class="btn btn-dark" id="text-enter-button">comment</button>
   </form>
</div>



<h1>Renter Profile</h1>
<div id="form-row-renter">
   <form class="col-lg-12">
      <div class="form-group">
         <label for="renterFullName">Full Name</label>
         <input type="text" class="form-control" id="renterName" placeholder="Full name">
      </div>

      <div class="form-group">
         <label for="inputDimensions">Dimensions</label>
         <input type="text" class="form-control" id="renterSpace" placeholder="LxHxW">
      </div>
      <div class="form-group">
         <input type="file" id="myFile" name="filename">
      </div>

      <div class="form-group col-md-2">
         <label for="inputZip">Zip Code</label>
         <input type="text" class="form-control" id="renterZip">
      </div>

      <button type="submit" class="btn btn-primary">Submit</button>
   </form>

</div>



